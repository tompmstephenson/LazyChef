<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.thomasstephenson.lazychef.PantryActivity">



    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_logo"/>

            <SearchView
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="25dp"
                android:layout_below="@id/logo"
                android:layout_centerHorizontal="true"
                android:iconifiedByDefault="false"
                android:queryHint="Add New Ingredients">
            </SearchView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/search"
                android:layout_marginTop="35dp"
                android:orientation="vertical">

                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/ingredient_image"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/butter"/>

                <TextView
                    android:id="@+id/ingredient_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Butter"
                    android:textSize="20dp"
                    android:layout_marginLeft="70dp"
                    android:layout_toRightOf="@id/ingredient_image"/>

                <TextView
                    android:id="@+id/ingredient_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Milk, Eggs, Other Dairy"
                    android:textSize="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@id/ingredient_image"
                    android:layout_below="@id/ingredient_title"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ingredient_title"
                    android:text="Add to Pantry"
                    android:textSize="10dp"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/colorAccent"/>

            </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/ingredient_image2"
                        android:layout_width="100dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/butter"/>

                    <TextView
                        android:id="@+id/ingredient_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text="Butter"
                        android:textSize="20dp"
                        android:layout_marginLeft="70dp"
                        android:layout_toRightOf="@id/ingredient_image2"/>

                    <TextView
                        android:id="@+id/ingredient_type2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Milk, Eggs, Other Dairy"
                        android:textSize="10dp"
                        android:layout_marginLeft="50dp"
                        android:layout_toRightOf="@id/ingredient_image2"
                        android:layout_below="@id/ingredient_title2"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/ingredient_title2"
                        android:text="Add to Pantry"
                        android:textSize="10dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/colorAccent"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/ingredient_image3"
                        android:layout_width="100dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/butter"/>

                    <TextView
                        android:id="@+id/ingredient_title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:text="Butter"
                        android:textSize="20dp"
                        android:layout_marginLeft="70dp"
                        android:layout_toRightOf="@id/ingredient_image3"/>

                    <TextView
                        android:id="@+id/ingredient_type3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Milk, Eggs, Other Dairy"
                        android:textSize="10dp"
                        android:layout_marginLeft="50dp"
                        android:layout_toRightOf="@id/ingredient_image3"
                        android:layout_below="@id/ingredient_title3"/>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/ingredient_title3"
                        android:text="Add to Pantry"
                        android:textSize="10dp"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/colorAccent"/>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </FrameLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation" />

</LinearLayout>
